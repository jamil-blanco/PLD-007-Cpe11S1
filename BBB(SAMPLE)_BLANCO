#include<iostream>
using namespace std;

int main ()

{
	
	//local variable
	int num1 = 0, num2 = 0, num3 = 0, average = 0;
	int sum = 0, difference = 0,product = 0, quotient = 0;
	
	cout << " Input num1: ";
	cin >> num1;
	
	cout << " Input num2: ";
	cin >> num2;
	
	cout << " Input num3: ";
	cin >> num3;

	sum = num1 + num2 + num3;	
	average = (num1 + num2 + num3) / 3;
	difference = num1 - num2 - num3;
	product = num1 * num2 * num3;			
	quotient = num1 / num2 / num3;
	
	cout << " Sum = " << sum << endl;

	cout << " Average = " << average << endl;
	
	cout << " Difference = " << difference << endl;
	
	cout << " Product = " << product << endl;
	
	cout << " Quotient = " << quotient << endl;
	
	return 0;
	
	
}
